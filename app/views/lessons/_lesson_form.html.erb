<h1><%= t :lesson %></h1>
<p>
  <b><%= t :category %>:</b>
  <%= link_to @lesson.category.name, @lesson.category %>
</p>
<% if @lesson.is_learned %>
  <p>
    <b><%= t :correct_answer %>:</b>
    <%= "#{@lesson.answers.answer_correct.size}/#{@lesson.answers.size}"%>
    <%= t "words" %>
  </p>
<% end %>
<p>
  <b><%= t :total_word %>:</b>
  <%= @lesson.lesson_words.size %>
  <%= t :words %>
</p>
<%= form_for @lesson do |f| %>
  <%= f.hidden_field :is_learned, value: true %>
  <%= f.fields_for :lesson_words do |result| %>
    <%= render "question_form", f: result %>
  <% end %>
  <%= f.submit t(:submit), class: "btn btn-primary" unless @lesson.is_learned %>
<% end %>
