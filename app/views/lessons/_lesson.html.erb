<tr>
  <td>
    <b>#<%= lesson.id %></b>
  </td>
  <td>
    <% if lesson.is_learned %>
      <span class="text-success">
        <%= t :finished %> (<%= result_lesson lesson %>)
      </span>
    <% else %>
      <span class="text-info"><%= t :opening %></span>
    <% end %>
  </td>

  <td class="text-right">
    <% if lesson.is_learned %>
      <%= link_to lesson, class: "btn btn-default btn-xs" do %>
        <span class="glyphicon glyphicon-eye-open"></span>
        <%= t :view_results %>
      <% end %>
    <% else %>
      <%= link_to lesson, class: "btn btn-primary btn-xs" do %>
        <span class="glyphicon glyphicon-play"></span>
        <%= t :continue %>
      <% end %>
    <% end %>
    <%= link_to lesson, method: :delete,
      class: "btn btn-danger btn-xs", data: {confirm: t(:you_sure)} do %>
      <span class="glyphicon glyphicon-remove"></span>
      <%= t :delete %>
    <% end %>
  </td>

</tr>
